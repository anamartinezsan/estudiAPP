<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".options">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:text="CURSOS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ciencias Naturales"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnCiencia"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:onClick="ciencia"
        app:srcCompat="@drawable/ciencia" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Lenguaje"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnLengua"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:onClick="lengua"
        app:srcCompat="@drawable/lengua" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Matematicas"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnMate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:onClick="mate"
        app:srcCompat="@drawable/mates" />

</LinearLayout>